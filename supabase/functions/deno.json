{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.ns", "deno.unstable", "dom"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports"
  ]
} 